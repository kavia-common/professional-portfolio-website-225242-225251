# Frontend configuration (copy to .env and adjust per environment)
# Note: Only variables prefixed with REACT_APP_ are exposed to the React app.

# API endpoints
REACT_APP_API_BASE=https://api.example.com
# Optional legacy variable (will be used if API_BASE not provided)
REACT_APP_BACKEND_URL=

# Frontend public URL (defaults to window.location.origin)
REACT_APP_FRONTEND_URL=https://www.example.com

# WebSocket URL (if not provided, derived from API_BASE by protocol swap http->ws, https->wss)
REACT_APP_WS_URL=wss://api.example.com

# Environment and build toggles
REACT_APP_NODE_ENV=development
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false

# Logging
REACT_APP_LOG_LEVEL=debug

# Healthcheck
REACT_APP_HEALTHCHECK_PATH=/healthz

# Feature flags
# JSON: ["fake-contact-post","beta-feature"]
# or CSV: fake-contact-post,beta-feature
REACT_APP_FEATURE_FLAGS=["fake-contact-post"]

# Experiments toggle
REACT_APP_EXPERIMENTS_ENABLED=false
